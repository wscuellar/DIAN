@model Gosocket.Dian.Web.Models.SummaryEventsViewModel

<style>
    /* Acuse de Recibo de Factura Electrónica */

    eventTittle {
        font-family: Arial;
        font-style: normal;
        font-weight: bold;
        font-size: 30px;
        line-height: 34px;
        color: #2C323C;
    }
</style>


<link href="~/Content/css/Radian/RadianIndex.css" rel="stylesheet" />

<div class="event-section page-content radian-view margin-15">
    <button id="EventViewClose">X</button>
    <div class="row margin-horizontal-0">
        <div class="panel">
            <div class="panel-heading padding-15">
                <div class="row title-container">
                    <p class="title-view">
                        @Model.Title
                    </p>
                    <div class="underline-title"></div>
                </div>
            </div>
            <div class="panel-body padding-top-20">
                <div class="row cude-section">
                    <div class="col-sm-4 left-section">
                        <span>CUDE:</span>
                        <span class="cude-text">@Model.CUDE</span>
                        <span><i class="fa fa-download"></i><um>Descarga</um></span>
                    </div>
                    <div class="col-sm-8 text-right right-section">
                        <span>Prefijo: @Model.Prefix </span>
                        <span>Número: @Model.Number</span>
                        <span>Fecha de emisión del Evento: @Model.DateOfIssue.ToString("yyyy-MM-dd")</span>
                    </div>
                </div>
                <div class="row aditional-data-section">

                    <div class="col-sm-4">
                        <h5>Datos del Emisor del evento </h5>
                        <p>NIT: @Model.SenderCode</p>
                        <p>Nombre: @Model.SenderName</p>
                    </div>
                    <div class="col-sm-4">
                        <h5>Datos del Receptor del Evento </h5>
                        <p>NIT: @Model.ReceiverCode</p>
                        <p>Nombre: @Model.ReceiverName</p>
                    </div>
                    <div class="col-sm-4">
                        @if (Model.EventStatus == Gosocket.Dian.Domain.Common.EventStatus.Mandato)
                        {
                            <h5>Datos del Mandato </h5>
                            <span>NIT: @Model.Mandate.ReceiverCode</span>
                            <span>MANDATARIO: @Model.Mandate.ReceiverName</span>
                            <span>NIT: @Model.Mandate.SenderCode</span>
                            <span>MANDANTE: @Model.Mandate.SenderName</span>

                            <div class="row aditional-data-section">
                                <div class="col-sm-4 second-section">
                                    <h5>Fecha del contrato</h5>
                                    <span>@Model.Mandate.ContractDate</span>
                                    <span>@Model.Mandate.MandateType</span>
                                </div>
                            </div>
                        }
                        @if (Model.EventStatus == Gosocket.Dian.Domain.Common.EventStatus.SolicitudDisponibilizacion)
                        {
                            <h5>Tipo de solicitud de Disponibilización </h5>
                            <span>@Model.RequestType</span>
                        }

                        @if (Model.EventStatus == Gosocket.Dian.Domain.Common.EventStatus.EndosoGarantia ||
                             Model.EventStatus == Gosocket.Dian.Domain.Common.EventStatus.EndosoProcuracion ||
                             Model.EventStatus == Gosocket.Dian.Domain.Common.EventStatus.EndosoPropiedad)
                        {
                            <h5>Datos del Mandato </h5>
                            <span>NIT: @Model.Endoso.ReceiverCode</span>
                            <span>ENDOSATARIO: @Model.Endoso.ReceiverName</span>
                            <span>NIT: @Model.Endoso.SenderCode</span>
                            <span>ENDOSANTE: @Model.Endoso.SenderName</span>

                            <div class="row aditional-data-section">
                                <div class="col-sm-4 second-section">
                                    <h5>Tipo de Endoso</h5>
                                    <span>@Model.Endoso.EndosoType</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>



                <div class="row radian-subtitle-container radian-certificates">
                    <div class="col-sm-10">
                        <p class="subtitle-view">
                            @ViewBag.subtitle1
                        </p>
                    </div>
                </div>
                <div class="row radian-subtitle-line"></div>
                <div class="table-responsive">
                    @if (Model.Validations.Count == 0)
                    {
                        <h5 class="margin-top-10"><i class="fa fa-check-circle fa-fw"></i> @Model.ValidationMessage </h5>
                    }
                    else
                    {
                        <table class="documents-table table table-striped align-middle margin-bottom-0" data-int="0">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Resultados</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Validations)
                                {
                                    <tr>
                                        <td>@item.RuleName</td>
                                        <td>@item.Status</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    <div class="row radian-subtitle-container radian-certificates">
                        <div class="col-sm-10">
                            <p class="subtitle-view">
                                @ViewBag.subtitle2
                            </p>
                        </div>
                    </div>
                    <div class="row radian-subtitle-line"></div>

                    <table class="documents-table table table-striped align-middle margin-bottom-0" data-int="0">
                        <thead>
                            <tr>
                                <th>Tipo de documento</th>
                                <th>Fecha</th>
                                <th>Descripción</th>
                                <th>NIT del Emisor</th>
                                <th>Emisor</th>
                                <th>NIT del Receptor</th>
                                <th>Receptor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.References)
                            {
                                <tr>
                                    <td>@item.Document</td>
                                    <td>@item.DateOfIssue.ToString("yyyy-MM-dd")</td>
                                    <td>@item.Description</td>
                                    <td>@item.SenderCode</td>
                                    <td>@item.SenderName</td>
                                    <td>@item.ReceiverCode</td>
                                    <td>@item.ReceiverName</td>

                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (Model.AssociatedEvents.Count > 0)
                    {
                        <div class="row radian-subtitle-container">
                            <div class="col-sm-10">
                                <p class="subtitle-view">
                                    @Model.EventTitle;
                                </p>
                            </div>
                        </div>
                        <div class="row radian-subtitle-line"></div>

                        <table class="documents-table table table-striped align-middle margin-bottom-0" data-int="0">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Fecha de Emisión</th>
                                    <th>Resultado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.AssociatedEvents)
                                {
                                    <tr>
                                        <td>@item.Document</td>
                                        <td>@item.EventDate.ToString("yyyy-MM-dd")</td>
                                        <td>Validado</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }


                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

        <!--Bootstrap Select [ OPTIONAL ]-->
        <script src="~/Content/plugins/bootstrap-select/bootstrap-select.min.js"></script>
        <script src="~/Content/js/bootstrap-filestyle.min.js"></script>
        <script src="~/Content/js/file-validator.js"></script>


        <script>

            $("#EventViewClose").click(function () {
                alert("hago algo");
                $('#modifyWrapper').hide();
                $('#container1').show();
            })

          

        </script>

    }
