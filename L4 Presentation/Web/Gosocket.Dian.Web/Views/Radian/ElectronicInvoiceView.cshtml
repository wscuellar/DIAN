
@{
    ViewBag.Title = "Modo de operación";
}
<link href="~/Content/css/Radian/RadianIndex.css" rel="stylesheet" />

<div style="text-align:left; margin-left:25px; margin-top:20px; ">
    <p style="height: 34px; font-family: Arial; font-style: normal; font-weight: normal; font-size: 30px; line-height: 34px; color: #000000; ">
        Modo de operación
    </p>
    <svg width="198" height="3" viewBox="0 0 198 3" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect width="198" height="3" rx="1.5" fill="#62C7AB" />
    </svg>
</div>

<div class="container-fluid RadianContainerBegin">

    <p class="RadianTextSelected">Seleccione el modo de operación en el Registro de Facturas Electronicas :</p>
    <svg width="100%" height="2" viewBox="0 0 1110 2" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 1C0 0.447715 0.447715 0 1 0H1109C1109.55 0 1110 0.447715 1110 1C1110 1.55228 1109.55 2 1109 2H1.00003C0.447741 2 0 1.55228 0 1Z" fill="#E9E8E8" />
    </svg>
    <div class="row-fluid">

        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div id="1" contributorType="1" operationMode="1" class="card RadianCardContainer">
                <div class="RadianImgContainer">
                    <img  class="RadianimgSvg" src="~/Content/images/Svg/OperacionDirecta.svg" />
                </div>
                <div class="card-body">
                    <p class="RadianTittleCard">Operación Directa</p>
                    <p class="RadianTittleCard2">Software Propio</p>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div id="2" contributorType="1" operationMode="2" class="card RadianCardContainer">
                <div class="RadianImgContainer">
                    <img  class="RadianimgSvg" src="~/Content/images/Svg/OperacionIndirecta.svg" />
                </div>
                <div class="card-body">
                    <p class="RadianTittleCard">Operación Indirecta</p>
                    <p class="RadianTittleCard2">A través de un aliado</p>
                </div>
            </div>
        </div>

    </div>

</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/js/Radian/RadianIndex.js"></script>

    <script>

        var contributorId = '@ViewBag.ContributorId';
        var operationClick = false;

        $('.RadianCardContainer').click(function () {
            if (!operationClick) {
                operationClick = true;

                var RegistrationDataViewModel = {
                    ContributorId: '@ViewBag.ContributorId',
                    RadianContributorType: $(this).attr('contributorType'),
                    RadianOperationMode: $(this).attr('operationMode'),
                };

                window.location.href = '@Url.Action("Index", "RadianApproved", new { id = ViewBag.ContributorId })';

                @*CallExecution("POST", '@Url.Action("RegistrationValidation", "Radian")', RegistrationDataViewModel,
                    function (param) {
                        CallExecution("POST", '@Url.Action("Index", "RadianApproved")', RegistrationDataViewModel,
                            function (param) {
                                window.location.href = '@Url.Action("Index", "RadianApproved")';
                            }, false
                        );
                    }, true
                );*@
            }
        });

    </script>
}

