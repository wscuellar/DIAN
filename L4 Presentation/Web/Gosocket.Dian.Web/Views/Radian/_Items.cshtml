@model Gosocket.Dian.Web.Models.AdminRadianViewModel
@using Gosocket.Dian.Web.Utils
@using Gosocket.Dian.Web.Common

@{ 
    ViewBag.Title = "Resultados de busqueda";
}
<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title no-nifty">@ViewBag.Title</h3>
        <div class="underline-subtitle"></div>
    </div>
    <div class="panel-body table-width-80">
        <div class="table-responsive">
            <table class="documents-table table table-striped table-hover align-middle margin-bottom-0" data-int="0">
                <thead>
                    <tr>
                        <th>NIT</th>
                        <th>Nombre Comercial</th>
                        <th>Razón Social</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var RadianContributor in Model.RadianContributors)
                    {
                        var textClass = DataUtils.GetProviderStatusStyle(RadianContributor.AcceptanceStatusId);
                        var isClickableRow = RadianContributor.RadianState == "Cancelado" ? "disabled" : User.IsInAnyRole("Administrador", "Super") ? "clickable-row" : "";
                        var urlView = User.IsInAnyRole("Administrador", "Super") ? Url.Action("ViewDetails", "Radian", new { id = RadianContributor.Id }) : "";
                    <tr>
                        <td class="smallText iffyTip"><a>@RadianContributor.Code</a></td>
                        <td class="largeText iffyTip"><a>@RadianContributor.BusinessName</a></td>
                        <td class="largeText iffyTip"><a>@RadianContributor.TradeName</a></td>
                        <td class="largeText iffyTip"><a>@RadianContributor.RadianState</a></td>
                        <td class="largeText iffyTip show-details @isClickableRow" data-href="@urlView"><a class="btn btn-link">Ver detalle</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

