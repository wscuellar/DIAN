@model Gosocket.Dian.Web.Models.RadianApproved.RadianApprovedViewModel
@{
    ViewBag.Title = "Certificados";
}

@* Todo: validar nombre y método del controlador *@
@using (Html.BeginForm("UpdateCertificates", "RadianApproved", FormMethod.Post, new { id = "add-radianContributorFileType-form" }))
{
    <div class="panel-body padding-20 padding-bottom-10">
        <div class="container">
            <div class="row title-container">
                <p class="title-view">
                    @ViewBag.title
                </p>
                <a><i class="far fa-clock green-text"></i><u class="green-text">Ver Historial</u></a>
                <div class="underline-title"></div>
            </div>
            @Html.Partial("_documentStates")
            <div class="row">
                <div class="col-sm">
                    
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    
                </div>
            </div>
            <div class="col-sm">
                <div class="col-sm-1 padding-xs-0">
                    <div class="form-group">
                        <div class="form-block" style="padding-top: 20px;">
                            <button type="submit" class="btn btn-action btn-radian-success">Cancelar Registro</button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-1 padding-xs-0">
                    <div class="form-group">
                        <div class="form-block" style="padding-top: 20px;">
                            <button type="submit" class="btn btn-success btn-radian-success">Enviar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}