@using Gosocket.Dian.Web.Models
@model UserLoginViewModel

<div class="bhoechie-tab-content active">
    <center>
        <a href=""><img alt="Dian" src="../Content/img/LogoDian.png" width="180" class=""></a>
        <form method="post" action="@Url.Action("Login","User")" style="margin-top: 20px;">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.RecaptchaToken, new {id = "AdminRecaptchaToken",  @class = "RecaptchaToken" })
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-envelope"></i>
                    </div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo electrónico", autocomplete = "off" })
                    @*<input required name="email" data-mailcheckfield=".email-suggestion" autofocus id="email" type="text" ng-model="model.username" class="form-control" placeholder="Correo electrónico" maxlength="100">*@
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger text-left" })
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-lock"></i>
                    </div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña", autocomplete = "off" })
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger text-left" })
                @Html.ValidationMessageFor(m => m.AdminLoginFailed, "", new { @class = "text-danger text-left" })
            </div>
            @*<div class="g-recaptcha" data-sitekey="@ConfigurationManager.GetValue("Recaptcha")"></div>*@
            <button class="btn btn-gosocket btn-lg btn-block" style="margin-top: 10px;" >
                <i class=""></i> Entrar
            </button>
        </form>
    </center>
</div>