@model Gosocket.Dian.Web.Models.RecoverPasswordModel

@{
    ViewBag.title = "Recuperar contraseña";
}
@section css
{
    <!--Bootstrap Select [ OPTIONAL ]-->
    <link href="~/Content/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet">
    <link href="~/Content/plugins/chosen/chosen.min.css" rel="stylesheet">
}
<div class="page-content radian-view margin-20">
    <div class="title-container">
        <p class="title-view">
            @ViewBag.title
        </p>
        <div class="underline-title"></div>
    </div>
    <div class="margin-horizontal-0 margin-top-50">
        <div class="panel" id="panel-form" data-target="#panel-form" data-toggle="panel-overlay">
            <div class="padding-20">
                <div class="pad-btm padding-bottom-0">
                    <div class="margin-horizontal-0">
                        @using (Html.BeginForm("RecoveryPassword", "User", FormMethod.Post, new { id = "forgot-pasword-form" }))
                        {
                            <div class="row">
                                <div class="form-group ">
                                    @Html.LabelFor(m => m.CompanyIdentificationType, new { @class = "control-label" })
                                    @Html.DropDownListFor(m => m.CompanyIdentificationType, new SelectList(Model.IdentificationTypes, "Id", "Description", Model.CompanyIdentificationType), new { id = "CompanyIdentificationType", @class = "form-control selectpicker" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                        @Html.LabelFor(m => m.DocumentNumber, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.DocumentNumber, new { @class = "form-control", placeholder = "Documento registrado", autocomplete = "off" })
                                        @Html.ValidationMessageFor(m => m.DocumentNumber, "", new { @class = "text-dangert" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                        @Html.LabelFor(m => m.EmailRemember, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.EmailRemember, new { @class = "form-control", placeholder = "Correo registrado", autocomplete = "off" })
                                        @Html.ValidationMessageFor(m => m.EmailRemember, "", new { @class = "text-dangert" })
                                </div>
                            </div>
                            <div class="panel-footer-grey text-center submit-container">
                                <button id="btnCancel" class="btn btn-success btn-radian-default">Cancelar</button>
                                <button id="submitRememberPassword" class="btn btn-gosocket">Recuperar contraseña</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>