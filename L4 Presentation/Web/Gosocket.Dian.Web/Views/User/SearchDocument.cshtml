@using Gosocket.Dian.Domain.Common
@using Gosocket.Dian.Infrastructure
@using Gosocket.Dian.Web.Models
@model UserLoginViewModel
@{
    ViewBag.Title = "Acceder";
    Layout = "~/Views/Shared/_LayoutNewLogin.cshtml";
}
